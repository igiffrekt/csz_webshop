# =============================================================================
# CSZ Webshop Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=csz_strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=generate-random-password

# -----------------------------------------------------------------------------
# Strapi CMS (apps/cms)
# -----------------------------------------------------------------------------
# Server
CMS_HOST=0.0.0.0
CMS_PORT=1337

# Security keys - generate with: openssl rand -base64 32
# Each key should be unique
APP_KEYS=generate-key-1,generate-key-2,generate-key-3,generate-key-4
API_TOKEN_SALT=generate-random-salt
ADMIN_JWT_SECRET=generate-admin-jwt-secret
TRANSFER_TOKEN_SALT=generate-transfer-salt
JWT_SECRET=generate-jwt-secret

# -----------------------------------------------------------------------------
# Fastify API (apps/api)
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=4000

# CORS - Frontend URL for cross-origin requests
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Next.js Web (apps/web) - for future use
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CMS_URL=http://localhost:1337
NEXT_PUBLIC_API_URL=http://localhost:4000
