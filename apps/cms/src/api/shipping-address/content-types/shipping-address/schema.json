{
  "kind": "collectionType",
  "collectionName": "shipping_addresses",
  "info": {
    "singularName": "shipping-address",
    "pluralName": "shipping-addresses",
    "displayName": "Shipping Address",
    "description": "User shipping addresses for checkout"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "recipientName": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "street": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "city": {
      "type": "string",
      "required": true,
      "maxLength": 100
    },
    "postalCode": {
      "type": "string",
      "required": true,
      "maxLength": 20
    },
    "country": {
      "type": "string",
      "default": "Magyarorszag",
      "maxLength": 100
    },
    "phone": {
      "type": "string",
      "maxLength": 50
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "shippingAddresses"
    }
  }
}
