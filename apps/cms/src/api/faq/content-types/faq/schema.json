{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Frequently asked questions"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "question": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "answer": {
      "type": "richtext",
      "required": true
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "category": {
      "type": "string",
      "maxLength": 100
    }
  }
}
