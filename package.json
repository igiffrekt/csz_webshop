{
  "name": "csz-webshop",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev:web": "pnpm --filter @csz/web dev",
    "dev:studio": "pnpm --filter @csz/studio dev",
    "dev": "pnpm run --parallel dev:web dev:studio",
    "build:web": "pnpm --filter @csz/web build",
    "build": "pnpm --filter @csz/web build",
    "start": "HOSTNAME=0.0.0.0 PORT=3000 node apps/web/.next/standalone/apps/web/server.js",
    "db:start": "docker compose -f docker/docker-compose.yml up -d",
    "db:stop": "docker compose -f docker/docker-compose.yml down",
    "db:logs": "docker compose -f docker/docker-compose.yml logs -f mariadb",
    "db:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d"
  },
  "devDependencies": {
    "tsx": "^4.0.0"
  },
  "dependencies": {
    "dotenv": "^17.2.4"
  }
}
