{
  "name": "csz-webshop",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev:cms": "pnpm --filter @csz/cms dev",
    "dev:api": "pnpm --filter @csz/api dev",
    "dev:web": "pnpm --filter @csz/web dev",
    "dev": "pnpm run --parallel dev:cms dev:api",
    "build:cms": "pnpm --filter @csz/cms build",
    "build:api": "pnpm --filter @csz/api build",
    "build:web": "pnpm --filter @csz/web build",
    "build": "pnpm run --parallel build:cms build:api build:web",
    "db:start": "docker compose -f docker/docker-compose.yml up -d",
    "db:stop": "docker compose -f docker/docker-compose.yml down",
    "db:logs": "docker compose -f docker/docker-compose.yml logs -f postgres",
    "db:reset": "docker compose -f docker/docker-compose.yml down -v && docker compose -f docker/docker-compose.yml up -d"
  },
  "devDependencies": {
    "@imgly/background-removal-node": "^1.4.5",
    "cloudinary": "^2.9.0",
    "csv-parse": "^6.1.0",
    "sharp": "^0.34.5",
    "tsx": "^4.0.0"
  }
}
