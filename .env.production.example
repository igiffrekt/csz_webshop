# ===========================================
# CSZ Webshop - Production Environment
# ===========================================
# Copy this file to .env.production and fill in real values
# NEVER commit .env.production to git!

# -------------------------------------------
# Database
# -------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=csz_webshop
POSTGRES_USER=csz
POSTGRES_PASSWORD=your-secure-password-here
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# -------------------------------------------
# Strapi CMS
# -------------------------------------------
STRAPI_URL=https://cms.csz-tuzvedelmi.hu
STRAPI_ADMIN_JWT_SECRET=your-32-char-admin-jwt-secret-here
STRAPI_API_TOKEN_SALT=your-32-char-api-token-salt-here
STRAPI_APP_KEYS=key1,key2,key3,key4
STRAPI_JWT_SECRET=your-32-char-jwt-secret-here
STRAPI_TRANSFER_TOKEN_SALT=your-32-char-transfer-token-salt

# -------------------------------------------
# Fastify API
# -------------------------------------------
API_URL=https://api.csz-tuzvedelmi.hu
API_HOST=0.0.0.0
API_PORT=3001
API_JWT_SECRET=your-32-char-api-jwt-secret-here

# -------------------------------------------
# Next.js Frontend
# -------------------------------------------
NEXT_PUBLIC_SITE_URL=https://csz-tuzvedelmi.hu
NEXT_PUBLIC_STRAPI_URL=https://cms.csz-tuzvedelmi.hu
NEXT_PUBLIC_API_URL=https://api.csz-tuzvedelmi.hu

# -------------------------------------------
# Stripe Payments
# -------------------------------------------
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxxxxxxxxxxxxxxxxxxxxx

# -------------------------------------------
# Email (SMTP)
# -------------------------------------------
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=noreply@csz-tuzvedelmi.hu
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=CSZ Tűzvédelem <noreply@csz-tuzvedelmi.hu>

# -------------------------------------------
# Session
# -------------------------------------------
SESSION_SECRET=your-session-secret-minimum-32-characters

# -------------------------------------------
# Node Environment
# -------------------------------------------
NODE_ENV=production

# -------------------------------------------
# Optional: Analytics
# -------------------------------------------
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
